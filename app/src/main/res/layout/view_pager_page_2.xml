<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.github.tomeees.scrollpickerdemo.MainFragmentViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/selectorStyleGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/group_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/selectorStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="selector style"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_percent="@dimen/heightPercentTextViewInPager"
            app:layout_constraintStart_toStartOf="@+id/selectorStyleGroup"
            app:layout_constraintTop_toTopOf="@+id/selectorStyleGroup"/>

        <Button
            android:id="@+id/selectorStyle1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Filled rect"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toStartOf="@+id/selectorStyleGroup"
            app:layout_constraintTop_toBottomOf="@+id/selectorStyle"/>

        <Button
            android:id="@+id/selectorStyle2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Rectangle"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectorStyle"/>

        <Button
            android:id="@+id/selectorStyle3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Classic"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintEnd_toEndOf="@+id/selectorStyleGroup"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintTop_toBottomOf="@+id/selectorStyle"/>

        <Button
            android:id="@+id/selectedItemTextColor"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="set random selected item text color"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectorStyleGroup"/>

        <Button
            android:id="@+id/setSelectedTextSize"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="set selected text size to 24"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedItemTextColor"/>

        <View
            android:id="@+id/shownItemCountGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/group_background"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setSelectedTextSize"/>

        <TextView
            android:id="@+id/shownItemCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="shown item count"
            android:textSize="@dimen/text_size"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentTextViewInPager"
            app:layout_constraintStart_toStartOf="@+id/selectorStyleGroup"
            app:layout_constraintTop_toTopOf="@+id/shownItemCountGroup"/>

        <Button
            android:id="@+id/shownItemCount1"
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="3"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:gravity="center"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toStartOf="@+id/shownItemCountGroup"
            app:layout_constraintTop_toBottomOf="@+id/shownItemCount"/>

        <Button
            android:id="@+id/shownItemCount2"
            android:layout_width="69dp"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="5"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:gravity="center"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toEndOf="@+id/shownItemCount1"
            app:layout_constraintTop_toBottomOf="@+id/shownItemCount"
            />

        <Button
            android:id="@+id/shownItemCount3"
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="6"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:gravity="center"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintStart_toEndOf="@+id/shownItemCount2"
            app:layout_constraintTop_toBottomOf="@+id/shownItemCount"
            />

        <Button
            android:id="@+id/shownItemCount4"
            android:layout_width="69dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="26dp"
            android:text="7"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:gravity="center"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="@dimen/heightPercentButtonInPager"
            app:layout_constraintEnd_toEndOf="@+id/shownItemCountGroup"
            app:layout_constraintStart_toEndOf="@+id/shownItemCount3"
            app:layout_constraintTop_toBottomOf="@+id/shownItemCount"
            />

    </android.support.constraint.ConstraintLayout>
</layout>